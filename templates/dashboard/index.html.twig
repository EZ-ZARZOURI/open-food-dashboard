{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-gray-100">
    {% include 'partials/navbar.html.twig' %}
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const editButtons = document.querySelectorAll('.edit-widget-btn');
        const modal = document.getElementById('edit-widget-form');
        const inputId = document.getElementById('edit-widget-id');
        const inputType = document.getElementById('edit-filterType');
        const inputValue = document.getElementById('edit-filterValue');
        const closeBtn = document.getElementById('close-edit-form');

        editButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                inputId.value = btn.dataset.id;
                inputType.value = btn.dataset.type;
                inputValue.value = btn.dataset.value || '';
                modal.classList.remove('hidden');
            });
        });

        closeBtn.addEventListener('click', () => {
            modal.classList.add('hidden');
        });
    });
    </script>
    <main class="p-6">
        <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold">Dashboard</h1>

        {# BOUTON AJOUT WIDGET #}
        <twig:Button size="icon" variant="outline" id="toggle-widget-form">
            {{ ux_icon('heroicons:plus', { class: 'w-5 h-5 text-blue-600' }) }}
        </twig:Button>
    </div>

    {% include 'dashboard/_add_widget_form.html.twig' %}

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const addBtn = document.getElementById('toggle-widget-form');
            const addModal = document.getElementById('add-widget-modal');
            const closeAddBtn = document.getElementById('close-add-modal');

            const addFilterType = document.getElementById('add-filterType');
            const addFilterValue = document.getElementById('add-filterValue');
            const addFilterValueContainer = document.getElementById('add-filterValueContainer');

            const categories = ['Snacks', 'Chocolates', 'Beverages', 'Biscuits'];
            const brands = ['Coca-Cola', 'Nestlé', 'Pepsi', 'Ferrero'];

            // Ouvrir modal ajout
            addBtn.addEventListener('click', () => {
                addModal.classList.remove('hidden');
            });

            // Fermer modal ajout
            closeAddBtn.addEventListener('click', () => {
                addModal.classList.add('hidden');
                addFilterType.value = '';
                addFilterValue.innerHTML = '<option value="">-- Sélectionner --</option>';
                addFilterValueContainer.classList.add('hidden');
            });

            // Mettre à jour le select Valeur selon le type
            addFilterType.addEventListener('change', function () {
                const type = this.value;
                addFilterValue.innerHTML = '<option value="">-- Sélectionner --</option>';

                if (!type) {
                    addFilterValueContainer.classList.add('hidden');
                    return;
                }

                const values = type === 'categorie' ? categories : brands;

                values.forEach(v => {
                    const option = document.createElement('option');
                    option.value = v;
                    option.textContent = v;
                    addFilterValue.appendChild(option);
                });

                addFilterValueContainer.classList.remove('hidden');
            });
        });

    </script>
        {# Conteneur horizontal des widgets #}
        <div class="flex gap-4 overflow-x-auto pb-4">
            {% for item in widgetsWithProducts %}
                {% set widget = item.widget %}
                {% set products = item.products %}

                {# WIDGET CARD #}
                <twig:Card class="flex-none w-96 bg-white shadow-md rounded-lg border border-gray-200">
                    
                    {# HEADER WIDGET #}
                    <twig:Card:Header class="flex justify-between items-center border-b border-gray-200 p-4">
                        <div>
                            <twig:Card:Title class="font-semibold text-lg">
                                {{ (widget.filterType ?: 'Produits')|upper }}
                                {% if widget.filterValue %} : {{ widget.filterValue|upper }}{% endif %}
                            </twig:Card:Title>
                            {# <twig:Card:Description class="text-sm text-gray-500">
                                Page {{ item.currentPage }} / {{ item.totalPages }} · 4 produits
                            </twig:Card:Description> #}
                        </div>

                        <div class="flex gap-2">
                            <twig:Button
                                size="icon"
                                variant="outline"
                                aria-label="Modifier"
                                class="edit-widget-btn"
                                data-id="{{ widget.id }}"
                                data-type="{{ widget.filterType }}"
                                data-value="{{ widget.filterValue }}"
                            >
                                {{ ux_icon('heroicons:pencil', { class: 'w-5 h-5 text-blue-600' }) }}
                            </twig:Button>
                            <twig:Button size="icon" variant="outline" aria-label="Supprimer">
                                {{ ux_icon('heroicons:trash', { class: 'w-5 h-5 text-red-600' }) }}
                            </twig:Button>
                        </div>
                    </twig:Card:Header>

                    {# PRODUITS : #}
                    <twig:Card:Content class="p-4 grid grid-cols-2 gap-4">
                        {% for product in products %}
                            <twig:Card class="bg-gray-50 rounded shadow p-2 flex flex-col">
                                <twig:Card:Header class="w-full h-32 overflow-hidden rounded">
                                    <a href="{{ product.imageUrl ?: 'https://placehold.co/600x600?text=No+Image' }}" target="_blank">
                                        <img src="{{ product.imageUrl ?: 'https://placehold.co/200x200?text=No+Image' }}"
                                             alt="{{ product.name ?: 'Image inconnue' }}"
                                             class="w-full h-full object-cover"/>
                                    </a>
                                </twig:Card:Header>

                                <twig:Card:Content class="flex-1 flex flex-col mt-2">
                                    <twig:Card:Title class="font-semibold text-sm truncate">
                                        {{ product.name ?: 'Nom inconnu' }}
                                    </twig:Card:Title>
                                    <twig:Card:Description class="text-xs text-gray-500 truncate">
                                        {{ product.brand ?: 'Marque inconnue' }}
                                    </twig:Card:Description>

                                    <twig:Button variant="outline" size="sm" class="mt-1"
                                                 onclick="this.nextElementSibling.classList.toggle('hidden')">
                                        Voir détails
                                    </twig:Button>

                                    {# DÉTAILS CACHÉS #}
                                    <div class="hidden text-xs text-gray-600 mt-1 space-y-1 w-full break-words">
                                        <p><strong>Code :</strong> {{ product.code ?: 'Code inconnu' }}</p>
                                        <p><strong>Pays :</strong> {{ product.countries ?: 'Pays inconnu' }}</p>
                                        <p><strong>Catégories :</strong> {{ product.categories ?: 'Catégorie inconnue' }}</p>
                                    </div>
                                </twig:Card:Content>
                            </twig:Card>
                        {% endfor %}
                    </twig:Card:Content>

                    {# PAGINATION WIDGET #}
                   {# <twig:Card:Footer class="p-4 border-t border-gray-200 flex justify-between">    
                        {% if item.currentPage > 1 %}
                            <twig:Button
                                variant="outline"
                                href="{{ path('dashboard_home', {
                                    ('page_' ~ widget.id): item.currentPage - 1
                                }) }}">
                                Précédent
                            </twig:Button> #}
                        {# {% else %}
                            <twig:Button variant="outline" disabled>Précédent</twig:Button>
                        {% endif %}      
                        {% if item.currentPage < item.totalPages %}
                            <twig:Button
                                variant="outline"
                                href="{{ path('dashboard_home', {
                                    ('page_' ~ widget.id): item.currentPage + 1
                                }) }}">
                                Suivant
                            </twig:Button> #}
                        {# {% else %}
                            <twig:Button variant="outline" disabled>Suivant</twig:Button>
                        {% endif %}

                    </twig:Card:Footer> #}
                    </twig:Card>

            {% endfor %}
        </div>
    </main>
</div>
{# FORMULAIRE MODIFICATION WIDGET #}
{% include 'dashboard/_edit_widget_form.html.twig' %}
<script>
document.addEventListener('DOMContentLoaded', () => {
    const editButtons = document.querySelectorAll('.edit-widget-btn');
    const modal = document.getElementById('edit-widget-form');
    const inputId = document.getElementById('edit-widget-id');
    const inputType = document.getElementById('edit-filterType');
    const inputValue = document.getElementById('edit-filterValue');
    const closeBtn = document.getElementById('close-edit-form');

    
    const optionsByType = {
    categorie: ['Snacks', 'Chocolates', 'Beverages', 'Biscuits'],
    marque: ['Coca-Cola', 'Nestlé', 'Pepsi', 'Ferrero']
    };


    function fillValues(type, selectedValue) {
    inputValue.innerHTML = ''; 
    if (!optionsByType[type]) return; 
    optionsByType[type].forEach(val => {
        const opt = document.createElement('option');
        opt.value = val;
        opt.textContent = val;
        if (val === selectedValue) opt.selected = true;
        inputValue.appendChild(opt);
    });
    }


    editButtons.forEach(btn => {
        btn.addEventListener('click', () => {
            const type = btn.dataset.type;
            const value = btn.dataset.value || '';

            inputId.value = btn.dataset.id;
            inputType.value = type;

            fillValues(type, value); 

            modal.classList.remove('hidden');
        });
    });

    // Mettre à jour le select Valeur si le Type change
    inputType.addEventListener('change', () => {
        fillValues(inputType.value, ''); // reset valeur si type change
    });

    closeBtn.addEventListener('click', () => {
        modal.classList.add('hidden');
    });
});

</script>
{% endblock %}
