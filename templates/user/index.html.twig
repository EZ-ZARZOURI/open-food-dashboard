{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-gray-100">
    {% include 'partials/navbar.html.twig' %}
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const messages = document.querySelectorAll('.flash-message');

        messages.forEach((msg, i) => {
            setTimeout(() => {
                msg.classList.remove('opacity-0', 'translate-x-4'); // fait apparaître
            }, 100 * i);

            // Faire disparaître après 3 secondes
            setTimeout(() => {
                msg.classList.add('opacity-0', 'translate-x-4');
                setTimeout(() => msg.remove(), 300);
            }, 3000 + (i * 100));
        });
    });
    </script>

    <div id="flash-messages" class="fixed top-4 right-4 space-y-2 z-50">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-message {{ label }} bg-gray-800 text-white px-4 py-2 rounded shadow-md opacity-0 transform translate-x-4 transition-all duration-300">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <main class="p-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold">Gestion des utilisateurs</h1>

            <twig:Button
                size="icon"
                variant="outline"
                onclick="window.location.href='{{ path('app_user_new') }}'"
            >
                {{ ux_icon('heroicons:plus', { class: 'w-5 h-5 text-blue-600' }) }}
            </twig:Button>
        </div>

        <div class="overflow-x-auto bg-white rounded-lg shadow">
            <table class="min-w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="p-4 text-left">ID</th>
                        <th class="p-4 text-left">Email</th>
                        <th class="p-4 text-left">Roles</th>
                        <th class="p-4 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr class="border-t">
                            <td class="p-4">{{ user.id }}</td>
                            <td class="p-4">{{ user.email }}</td>
                            <td class="p-4">{{ user.roles[0] }}</td>
                            <td class="p-4 flex gap-2">
                                <twig:Button
                                    size="icon"
                                    variant="outline"
                                    onclick="window.location.href='{{ path('app_user_edit', {id: user.id}) }}'"
                                >
                                    {{ ux_icon('heroicons:pencil', { class: 'w-5 h-5 text-blue-600' }) }}
                                </twig:Button>

                                {% include 'user/_delete_form.html.twig' with { user: user } %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun utilisateur trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
</div>
{% endblock %}
